<div class="container">

<h1>Searching for <%= @search %></h1>

<%= puts @recipes %>

<div class="row">
	<div class="col-md-12">
<% if @recipes && @recipes.any? %>

	<table class="table table-striped">
		<thead>
			<th></th>
			<th>Title</th>
			<th>Social Rank</th>
		</thead>
		<tbody>
			<% @recipes.each do |recipe| %>
				<tr>
					<td><%= link_to(image_tag(recipe["image_url"], size: "100x100"), recipe["source_url"]) %></td>
					<td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
					<td><%= recipe["social_rank"] %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

<% else %>

	<p>No recipes found</p>

<% end %>
</div>
</div>
</div>
