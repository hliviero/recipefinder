<h1>Searching for - <%= @search_term.capitalize %></h1>

<% if @recipes.blank? || @search_term.blank? %>

<h1>No Recipes found!</h1>

<% else %>

<table border="1">
	<tr>
  	<th>Image</th>
  	<th>Recipe</th>
  	<th>Rating</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
			<td><%= link_to(image_tag(recipe["image_url"], size: "100x100"), recipe["source_url"]) %></td>
			<td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
			<td><%= recipe["social_rank"].to_i %></td>
    </tr>
	<% end %>
</table>

<% end %>
