

<% if @recipes.blank? || @search_term.blank? %>

<h1>That's bad, No Recipes found!</h1>

<% else %>

<h1>
	<%= form_tag("/recipes", method: "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>
</h1>

<table border="1">
	<tr>
  	<th>Image</th>
  	<th>Recipe</th>
  	<th>Rating</th>
  </tr>
  <% @recipes.each do |recipe| %>
    <tr class=<%= cycle('even', 'odd') %>>
			<td><%= link_to(image_tag(recipe["image_url"], size: "100x100"), recipe["source_url"]) %></td>
			<td><%= link_to sanitize(recipe["title"]), recipe["source_url"] %></td>
			<td><%= recipe["social_rank"].to_i %></td>
    </tr>
	<% end %>
</table>

<% end %>
